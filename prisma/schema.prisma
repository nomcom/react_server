generator client {
  provider = "prisma-client-js"
  output   = "./generated/db"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Models
model Comment {
  id        Int  @id @default(autoincrement())
  comment   String?
  markers   Marker[]
}

model Marker {
  id        Int     @id @default(autoincrement())
  date      String
  time      String
  lat       Float?
  lng       Float?
  alt       Float?
  comment     Comment? @relation(fields: [commentId], references: [id])
  commentId   Int?
  imageId   Int?
}
